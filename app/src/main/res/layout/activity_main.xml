<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatingResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <!--Button: Take Image from Camera, Gallery-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/inputImageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Take Image"
                    app:backgroundTint="#076722"
                    app:icon="@drawable/ic_baseline_add_a_photo_24" />

                <!--Button: Recognize text from the image we took from Camera/Gallery-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recognizeTextBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="Recognize Text"
                    app:backgroundTint="#25389F"
                    app:icon="@drawable/ic_baseline_document_scanner_24" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--ImageView: Show image we took from Camera/Gallery-->

                    <!--TextView: Label to show that below will be the recognized text shown-->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/healthyeating"
                        app:strokeWidth="2dp"
                        android:paddingLeft="33dp"
                        android:paddingRight="33dp"/>
        <!--
                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Recognized Text:" />
        -->

                    <!--EditText: show the recognized text, You may use TextView instead-->
                    <!--
                    <EditText
                        android:id="@+id/recognizedTextEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />

                    -->

                </LinearLayout>



            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/shape3"
                            android:textAlignment="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                             >

                            <TextView
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textColor="#830000"
                                android:textSize="17dp"
                                android:text="Energy" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textAlignment="center">

                                <EditText
                                    android:id="@+id/editEnergy"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="2"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:textSize="22dp"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    android:inputType="numberDecimal"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:background="@color/white"
                                    android:text="kcal"
                                    />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/shape3"
                            android:textAlignment="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginLeft="10dp">

                            <TextView
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textColor="#830000"
                                android:textSize="15dp"
                                android:text="Saturated Fats" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textAlignment="center">

                            <EditText
                                android:id="@+id/editTotalfat"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:background="@color/white"
                                android:textAlignment="center"
                                android:inputType="numberDecimal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:background="@color/white"
                                android:text="g"
                                />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/shape3"
                            android:textAlignment="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="10dp">

                            <TextView
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textColor="#830000"
                                android:textSize="17dp"
                                android:text="Sugars" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textAlignment="center">

                                <EditText
                                    android:id="@+id/editSugars"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:textSize="22dp"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    android:inputType="numberDecimal"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:textSize="22dp"
                                    android:textAlignment="center"
                                    android:background="@color/white"
                                    android:text="g"
                                    />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/shape3"
                            android:textAlignment="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textColor="#830000"
                                android:textSize="17dp"
                                android:text="Sodium" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textAlignment="center">

                                <EditText
                                    android:id="@+id/editSodium"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="2"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:textSize="22dp"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    android:inputType="numberDecimal"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_weight="4"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:textSize="20dp"
                                    android:textAlignment="center"
                                    android:background="@color/white"
                                    android:text="mg"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <RadioGroup
                            android:background="@drawable/shape2"
                            android:id="@+id/foodType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:checkedButton="@id/radioButtonFood"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButtonFood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:text="food"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/radioButtonDrink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="11dp"
                                android:layout_weight="1"
                                android:text="beverage"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/shape4"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="6dp">

                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:textColor="#115E00"
                            android:textSize="15dp"
                            android:text="Fruit and vegetables" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textAlignment="center">

                            <EditText
                                android:id="@+id/editFruitVegetables"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:background="@color/white"
                                android:textAlignment="center"
                                android:text="0"
                                android:inputType="numberDecimal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:background="@color/white"
                                android:text="%"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/shape4"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="6dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:textColor="#115E00"
                            android:textSize="17dp"
                            android:text="Fibre" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textAlignment="center">

                            <EditText
                                android:id="@+id/editFibre"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:background="@color/white"
                                android:textAlignment="center"
                                android:inputType="numberDecimal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:background="@color/white"
                                android:text="g"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/shape4"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="6dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:textColor="#115E00"
                            android:textSize="17dp"
                            android:text="Protein" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textAlignment="center">

                            <EditText
                                android:id="@+id/editProtein"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:background="@color/white"
                                android:textAlignment="center"
                                android:inputType="numberDecimal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:background="@color/white"
                                android:text="g"
                                />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/GradingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:onClick="onCheckRatingClicked"
                    android:padding="10dp"
                    android:text="RATING"
                    app:backgroundTint="#AF870C"
                    app:icon="@drawable/ic_baseline_grade_24" />

            </LinearLayout>

            <!--
            <Button
                android:id="@+id/button_to_rating_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating Records"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="30dp"/>
                -->


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>